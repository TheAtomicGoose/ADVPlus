{
  "manifest_version": 2,

  "name": "ADVPlus",
  "description": "Provides some useful tools for use with advrider.com.",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.advrider.com/*"],
      "js": ["jquery-3.1.1.min.js", "content.js"]
    }
  ],
  "permissions": [
      "activeTab",
      "storage"
  ]
}
